<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorBackground" />

        <TextView
            android:id="@+id/userNameTv"
            android:text="Full name"
            android:textColor="@color/colorBlack"
            android:textSize="18sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorBackground" />

        <TextView
            android:id="@+id/userEmailTv"
            android:text="Email"
            android:layout_marginTop="10dp"
            android:textColor="@color/colorBlack"
            android:textSize="18sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorBackground" />

        <TextView
            android:id="@+id/userPhoneTv"
            android:text="Phone"
            android:layout_marginTop="10dp"
            android:textColor="@color/colorBlack"
            android:textSize="18sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorBackground" />

        <TextView
            android:id="@+id/userCareerTv"
            android:text="Career"
            android:layout_marginTop="10dp"
            android:textColor="@color/colorBlack"
            android:textSize="18sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorBackground" />

        <TextView
            android:id="@+id/userUniversityTv"
            android:text="University"
            android:layout_marginTop="10dp"
            android:textColor="@color/colorBlack"
            android:textSize="18sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorBackground" />

        <TextView
            android:id="@+id/userCourseTv"
            android:text="Course"
            android:layout_marginTop="10dp"
            android:textColor="@color/colorBlack"
            android:textSize="18sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorBackground" />

        <TextView
            android:id="@+id/userCountryTv"
            android:text="Country"
            android:layout_marginTop="10dp"
            android:textColor="@color/colorBlack"
            android:textSize="18sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorBackground" />

        <TextView
            android:id="@+id/userScholarshipTypeTv"
            android:text="Scholarship Type"
            android:layout_marginTop="10dp"
            android:textColor="@color/colorBlack"
            android:textSize="18sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorBackground" />

        <TextView
            android:id="@+id/userProfileTv"
            android:text="Profile"
            android:layout_marginTop="10dp"
            android:textColor="@color/colorBlack"
            android:textSize="18sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorBackground" />


    </LinearLayout>

</RelativeLayout>